# Start AD1
device ad1
reset
readpartnumber
# Setup default config: 4MHz sample rate, TX 2400MHz, RX 2400MHz
bist_configureSystemParameters 2400 2400
bist_startTransceiver
wait 100
# Setup and tune LVDS bus
w 0x012 0x12
w 0x03C 0x03
w 0x03B 0x00
w 0x006 0x0B
w 0x007 0x80
w 0x03D 0xFF
w 0x03E 0x0F
# Enable RX test-tone
w 0x3F4 0x0B

# Start AD2
device ad2
reset
readpartnumber
# Setup default config: 4MHz sample rate, TX 2400MHz, RX 2400MHz
bist_configureSystemParameters 2400 2400
bist_startTransceiver
wait 100
# Setup and tune LVDS bus
w 0x012 0x12
w 0x03C 0x03
w 0x03B 0x00
w 0x006 0x0B
w 0x007 0x80
w 0x03D 0xEF
w 0x03E 0x0F
# Enable RX test-tone
w 0x3F4 0x0B

# Tune XO 
bist_ADI_Set_XO_DAC

