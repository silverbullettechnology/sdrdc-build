# Setup AD1 for 4MSPS
device ad1
set_out_voltage_sampling_frequency 4000000
set_in_voltage_sampling_frequency  4000000

# Enable FIR filters
set_filter_fir_config             wimax
set_in_out_voltage_filter_fir_en  1
set_out_voltage_filter_fir_en     1
set_in_voltage_filter_fir_en      1

# Start AD2 for 4MSPS
device ad2
set_out_voltage_sampling_frequency 4000000
set_in_voltage_sampling_frequency  4000000

# Enable FIR filters
set_filter_fir_config             wimax
set_in_out_voltage_filter_fir_en  1
set_out_voltage_filter_fir_en     1
set_in_voltage_filter_fir_en      1

# Tune XO 
#bist_ADI_Set_XO_DAC

