if USER_APPS_ROMFS_HACKS
 	config USER_APPS_ROMFS_HACKS_FSTAB_MICROSD
	bool "Add /etc/fstab entry for micro-SD card"
	help
	  Select this to add an FSTAB entry to auto-mount the micro-SD card on boot

 	config USER_APPS_ROMFS_HACKS_FSTAB_EMMC
	bool "Add /etc/fstab entry for onboard eMMC"
	help
	  Select this to add an FSTAB entry for the eMMC chip, it is set noauto

endif
